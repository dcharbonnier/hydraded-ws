{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist/",
    "target": "ES5",
    "sourceMap": true,
    "declaration": true,
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/*.ts"
  ]
}