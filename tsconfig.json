{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist/",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "types": [
      "mocha",
      "chai",
      "node"
    ],
    "lib": [
      "es5",
      "dom",
      "es2015.promise"
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeExternals": true,
    "exclude": [
      "**/*.spec.ts",
      "**/polyfill/*"
    ],
    "mode": "file",
    "out": "docs",
    "theme": "minimal",
    "ignoreCompilerErrors": true,
    "target": "ES5",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "stripInternal": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "readme": "none"
  }
}